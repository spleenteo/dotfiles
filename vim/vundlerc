let has_vundle=1

let vundle_readme=expand('~/.vim/bundle/vundle/README.md')
if !filereadable(vundle_readme)
    echo "Installing Vundle.."
    echo ""
    silent !mkdir -p ~/.vim/bundle
    silent !git clone https://github.com/gmarik/vundle ~/.vim/bundle/vundle
    let has_vundle=0
endif

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

Bundle 'gmarik/vundle'

" colors
Bundle 'wgibbs/vim-irblack'
Bundle 'mikewest/vimroom'

" session manager
Bundle 'xolox/vim-session.git'

" syntaxes
Bundle 'tpope/vim-haml.git'
Bundle 'tpope/vim-markdown.git'
Bundle 'kchmck/vim-coffee-script.git'
Bundle 'bbommarito/vim-slim.git'
Bundle 'othree/html5.vim.git'
Bundle 'timcharper/textile.vim.git'
Bundle 'pangloss/vim-javascript.git'

" ruby stuff
Bundle 'vim-ruby/vim-ruby.git'
Bundle 'tpope/vim-rails.git'
Bundle 'welaika/vim-itermux.git'
" A vim plugin to convert key styles of ruby hashes
Bundle 'rorymckinley/vim-rubyhash.git'
" ar & ir
Bundle 'nelstrom/vim-textobj-rubyblock'
" adding end after if, do, def and several other keywords
Bundle 'tpope/vim-endwise.git'
" ro & rJ
Bundle 'AndrewRadev/splitjoin.vim.git'

" snipmate
Bundle 'MarcWeber/vim-addon-mw-utils.git'
Bundle 'tomtom/tlib_vim.git'
Bundle 'stefanoverna/snipmate-snippets.git'
Bundle 'garbas/vim-snipmate.git'

" other great
Bundle 'spolu/dwm.vim.git'
Bundle 'bogado/file-line'
" Bundle 'kana/vim-fakeclip'
Bundle 'tpope/vim-fugitive.git'
Bundle 'mileszs/ack.vim.git'
Bundle 'tpope/vim-commentary.git'
Bundle 'austintaylor/vim-choosecolor.git'
Bundle 'tsaleh/vim-align.git'
Bundle 'sickill/vim-pasta.git'
Bundle 'kien/ctrlp.vim.git'
Bundle 'tpope/vim-eunuch.git'
Bundle 'ervandew/supertab.git'
Bundle 'scrooloose/nerdtree.git'
Bundle 'Lokaltog/vim-powerline.git'
Bundle 'tpope/vim-surround.git'
Bundle 'nathanaelkane/vim-indent-guides.git'

" rubyblock dependencies
Bundle 'tsaleh/vim-matchit'
Bundle 'kana/vim-textobj-user'

if has_vundle == 0
    echo "Installing Bundles, please ignore key map error messages"
    echo ""
    :BundleInstall
endif

filetype plugin indent on
