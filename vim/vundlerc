let has_vundle=1

let vundle_readme=expand('~/.vim/bundle/vundle/README.md')
if !filereadable(vundle_readme)
    echo "Installing Vundle.."
    echo ""
    silent !mkdir -p ~/.vim/bundle
    silent !git clone https://github.com/gmarik/vundle ~/.vim/bundle/vundle
    let has_vundle=0
endif

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

Bundle 'gmarik/vundle'

" 16 colors colorscheme, for a uniform terminal experience
Bundle 'noahfrederick/vim-noctu'

" syntaxes
Bundle 'tpope/vim-markdown'
Bundle 'kchmck/vim-coffee-script'
Bundle 'slim-template/vim-slim'
Bundle 'othree/html5.vim'
Bundle 'pangloss/vim-javascript'
Bundle 'tpope/vim-cucumber'
Bundle 'vim-ruby/vim-ruby'

" ruby stuff
Bundle 'stefanoverna/vim-plumber'
Bundle 'stefanoverna/vim-alternate'
Bundle 'stefanoverna/vim-reformat-call'
" adding end after if, do, def and several other keywords
Bundle 'tpope/vim-endwise'

" Git (used with airline)
Bundle 'tpope/vim-fugitive'
Bundle 'airblade/vim-gitgutter'

" smart autocompletion
Bundle 'ervandew/supertab'
" snippets
Bundle "MarcWeber/vim-addon-mw-utils"
Bundle "tomtom/tlib_vim"
Bundle "garbas/vim-snipmate"
Bundle "stefanoverna/snipmate-snippets"
" nice status line
Bundle 'bling/vim-airline'
" open files in specific line (eg. vim ~/foo.rb:12)
Bundle 'bogado/file-line'
" handy tmux-vim panes navigation
Bundle 'christoomey/vim-tmux-navigator'
" search
Bundle 'rking/ag.vim'
" visual tab hints
Bundle 'nathanaelkane/vim-indent-guides'
" project drawer
Bundle 'scrooloose/nerdtree'
" smarter pasting
Bundle 'sickill/vim-pasta'
" %S
Bundle 'tpope/vim-abolish'
" Comment all the things
Bundle 'tpope/vim-commentary'
" Repeat more stuff
Bundle 'tpope/vim-repeat'
" cs"'
Bundle 'tpope/vim-surround'
" Fuzzy file search
Bundle 'wincent/Command-T'
" populate the argument list from the files in the quickfix list
Bundle 'henrik/vim-qargs'
" create missing directories on the fly
Bundle 'dockyard/vim-easydir'

" dependencies
Bundle 'tsaleh/vim-matchit'
Bundle 'kana/vim-textobj-user'

if has_vundle == 0
    echo "Installing Bundles, please ignore key map error messages"
    echo ""
    :BundleInstall
endif

filetype plugin indent on

