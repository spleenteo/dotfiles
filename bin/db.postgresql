#!/bin/sh

case "$1" in
  --help)
    pg_ctl $@
    ;;
  user)
    createuser -d -R -P $@
    ;;
  start | restart)
    pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log $@
    ;;
  stop)
    pg_ctl -D /usr/local/var/postgres -m fast $@
    ;;
  *)
    pg_ctl -D /usr/local/var/postgres $@
esac
