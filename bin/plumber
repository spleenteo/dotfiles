#!/bin/bash

DEFAULT_PIPE_NAME=".plumber"
PIPE_NAME="${1:-$DEFAULT_PIPE_NAME}"

if [ ! -p $PIPE_NAME ]; then
  echo "Created pipe ${PIPE_NAME}..."
  mkfifo $PIPE_NAME
fi

tmux display-message -p '#S:#I.#P' > .plumber-pane

echo "Waiting for commands!"

function hr {
  printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' ${1:-}
}

while true; do
  COMMAND=$(cat $PIPE_NAME)
  hr =
  echo $COMMAND
  hr -
  sh -c "$COMMAND"
  echo
  hr =
  echo
  # Enter copy mode
  tmux copy-mode -u
  # Go to the top of buffer
  tmux send-keys $'\g'
done

