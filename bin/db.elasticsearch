#!/bin/sh

# MONGOPID=`ps -ef | grep 'elasticsearch' | grep -v grep | awk '{print $2}'`
ELASTICPID='/usr/local/opt/elasticsearch/elasticsearch.pid'

case "$1" in
  start)
    elasticsearch -p $ELASTICPID -D es.config=/usr/local/opt/elasticsearch/config/elasticsearch.yml
    ;;
  stop)
    PID=`cat $ELASTICPID`
    if [ ! -z "$PID" ]; then
      kill -15 $PID
    fi
    ;;
  *)
    mongod $@
esac

